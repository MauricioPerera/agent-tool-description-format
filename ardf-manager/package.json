{
  "name": "ardf-manager",
  "private": true,
  "version": "0.1.0",
  "description": "ARDF Manager monorepo for cataloging, ranking, and analyzing ARDF resources with MCP integration.",
  "license": "MIT",
  "packageManager": "npm@10.8.0",
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "format": "npm run format --workspaces",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:seed": "npm run seed --workspace @ardf/database",
    "clean": "node -e \"const fs=require('fs'), path=require('path'); const dirs=['apps/web/.next','apps/web/dist','apps/api/dist','packages/core/dist','packages/search/dist','packages/mcp/dist','packages/database/dist']; dirs.forEach(d=>{try{fs.rmSync(path.join(__dirname,d),{recursive:true,force:true});}catch(e){}});\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.18.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5"
  }
}
