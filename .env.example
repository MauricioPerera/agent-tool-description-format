# ATDF Environment Configuration

# Application Settings
ATDF_ENV=development
DEBUG=true
LOG_LEVEL=debug
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://atdf_user:atdf_password@localhost:5432/atdf_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=atdf_db
DB_USER=atdf_user
DB_PASSWORD=atdf_password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_STORAGE=redis

# Monitoring & Metrics
PROMETHEUS_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health

# Logging
LOG_FORMAT=json
LOG_FILE=logs/atdf.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=false
FROM_EMAIL=noreply@atdf.dev

# External Services
WEATHER_API_KEY=your-weather-api-key
HOTEL_API_KEY=your-hotel-api-key
VECTOR_DB_URL=

# Development Settings
DEV_RELOAD=true
DEV_DEBUG_PORT=5678
DEV_PROFILING=false

# Testing
TEST_DATABASE_URL=postgresql://atdf_user:atdf_password@localhost:5433/atdf_test_db
TEST_REDIS_URL=redis://localhost:6380/1

# Docker Settings
COMPOSE_PROJECT_NAME=atdf
DOCKER_REGISTRY=
DOCKER_TAG=latest

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=

# Feature Flags
FEATURE_VECTOR_SEARCH=true
FEATURE_RATE_LIMITING=true
FEATURE_CACHING=true
FEATURE_METRICS=true
FEATURE_WEBHOOKS=false