{
  "name": "atdf-bmad-integration",
  "version": "1.0.0",
  "description": "ATDF (Agent Tool Description Format) project; repository also includes optional internal internal automation tooling for the ATDF team.",
  "main": "index.js",
  "scripts": {
    "install:bmad": "npx bmad-method install",
    "bmad:update": "git pull && npm run install:bmad",
    "start": "python -m examples.fastapi_mcp_integration",
    "test": "python -m pytest tests/",
    "test:js": "cd js && npm test",
    "bmad:web": "echo 'Visit https://gemini.google.com or https://chat.openai.com and upload bmad-orchestrator.md'",
    "bmad:setup": "python tools/bmad_atdf_integration.py",
    "bmad:validate": "python tools/validator.py schema/examples/hole_maker.json",
    "bmad:test-integration": "python -m pytest tests/test_integration.py -v",
    "bmad:start-server": "uvicorn examples.fastapi_mcp_integration:app --reload --port 8000",
    "bmad:generate-docs": "python tools/generate_docs.py",
    "bmad:status": "python -c \"import json; print(json.dumps(json.load(open('bmad/bmad_status.json')), indent=2))\"",
    "bmad:tools": "python -c \"import json; print(json.dumps(json.load(open('bmad/tools/atdf_all_tools.json')), indent=2))\"",
    "bmad:workflow": "echo 'Available workflows: schema_enhancement, tool_integration, error_handling_improvement'",
    "dev": "uvicorn examples.fastapi_mcp_integration:app --reload --port 8000",
    "dev:safe": "uvicorn examples.fastapi_mcp_integration:app --no-reload --port 8000",
    "n8n:start": "n8n start",
    "n8n:install": "npm install n8n",
    "bridge:start": "python examples/mcp_atdf_bridge.py --port 8001 --atdf-server http://localhost:8000",
    "integration:full": "echo 'Start ATDF server, then MCP bridge, then n8n - see README for details'"
  },
  "keywords": [
    "atdf",
    "agent-tools",
    "ai-agents",
    "bmad-method",
    "tool-description",
    "error-handling",
    "mcp",
    "fastapi",
    "json-schema"
  ],
  "author": "ATDF Team",
  "license": "MIT",
  "dependencies": {
    "bmad-method": "latest",
    "n8n": "^1.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "@types/node": "^20.0.0"
  },
  "bmad": {
    "expansionPacks": [
      "bmad-method-core",
      "bmad-method-python"
    ],
    "projectType": "api-framework",
    "primaryLanguage": "python",
    "framework": "fastapi"
  },
  "engines": {
    "node": ">=20.0.0",
    "python": ">=3.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/agent-tool-description-format"
  },
  "bugs": {
    "url": "https://github.com/your-org/agent-tool-description-format/issues"
  },
  "homepage": "https://github.com/your-org/agent-tool-description-format#readme"
}
