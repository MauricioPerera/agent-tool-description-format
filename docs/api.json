{
  "openapi": "3.0.0",
  "info": {
    "title": "ATDF Internal Ops API",
    "version": "1.0.0",
    "description": "Internal API used by the internal coordination workflows; not part of the public ATDF protocol."
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "timestamp": {
                      "type": "string"
                    },
                    "version": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tools": {
      "get": {
        "summary": "List available tools",
        "responses": {
          "200": {
            "description": "List of ATDF tools",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tools": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ATDFTool"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ATDFTool": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "when_to_use": {
            "type": "string"
          },
          "inputSchema": {
            "type": "object"
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    }
  }
}
